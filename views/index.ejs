<body>
	<h1> Websites With Cool Shiza </h1>

	<ul class="quotes">
	  <% for(var i=0; i<sites.length; i++) {%>
	    <li class="quote">	
	    	<div>
		      <a class="listthing" href='<%= sites[i].name %>'>
		      	<h3><%= sites[i].info %></h3>
		      </a>
		    </div>

		    <div>
		      <form class='deleto' method="POST" action="/websites/<%= sites[i].name %>?_method=DELETE">
		      	<button class="delete btn-danger" data-name='<%= sites[i].name %>'><b>X</b></button>
		      </form>
		    </div>
	   
	    </li>
	  <% } %>
	</ul>
	
 	<form action="/websites" method="POST">
	 	<input type="text" placeholder="website" name="name">
	 	<input type="text" placeholder="info" name="info">
	 	<button class='btn-primary' type="submit">Hit It</button>
 	</form>

</body>
</html>